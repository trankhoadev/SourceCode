<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="2dp"
    app:cardBackgroundColor="#F4DDDD"
    app:cardCornerRadius="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <ImageView
            android:id="@+id/donut_img"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/donut_yellow" />

        <TextView
            android:id="@+id/donut_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/donut_img"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Tasty Donut"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/donut_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/donut_name"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="14dp"
            android:layout_toRightOf="@id/donut_img"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Spicy tasty donut family"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/donut_price"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/donut_desc"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="14dp"
            android:layout_toRightOf="@id/donut_img"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="$20.00"
            android:textColor="@color/black"
            android:textSize="28dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/donut_btn_add"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/donut_desc"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@+id/donut_price"
            android:src="@drawable/plus_button" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>